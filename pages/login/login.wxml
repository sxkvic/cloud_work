<view class="login-container">
  <!-- Logo 区域 -->
  <view class="logo-area">
    <view class="logo-box">
      <van-icon name="manager" size="60px" color="#fff" />
    </view>
    <view class="app-name">装维助手</view>
    <view class="app-desc">师傅端工单管理系统</view>
  </view>

  <!-- 表单区域 -->
  <view class="form-area">
    <view class="input-item">
      <van-field
        value="{{ jobId }}"
        label="工号"
        placeholder="请输入工号"
        clearable
        bind:change="onJobIdChange"
      />
    </view>
    <view class="input-item">
      <van-field
        value="{{ password }}"
        type="password"
        label="密码"
        placeholder="请输入密码"
        clearable
        bind:change="onPasswordChange"
      />
    </view>

    <view class="login-btn">
      <van-button 
        type="primary" 
        block 
        round 
        size="large"
        loading="{{ loading }}"
        disabled="{{ !canLogin }}"
        bind:click="handleLogin"
      >
        登录
      </van-button>
    </view>
  </view>

  <!-- 底部版权 -->
  <view class="footer">
    <text>© 2024 装维助手</text>
  </view>
</view>

<van-toast id="van-toast" />
