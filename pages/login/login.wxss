page {
  background-color: #fff;
}

.login-container {
  padding: 60rpx;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  box-sizing: border-box;
}

/* Logo 区域 */
.logo-area {
  margin-top: 40rpx;
  margin-bottom: 80rpx;
  text-align: center;
}

.logo-box {
  width: 140rpx;
  height: 140rpx;
  background: #1989fa;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(25, 137, 250, 0.3);
}

.app-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.app-desc {
  font-size: 26rpx;
  color: #999;
  letter-spacing: 4rpx;
}

/* 表单区域 */
.form-area {
  width: 100%;
}

.input-item {
  background: #f7f8fa;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
}

.login-btn {
  margin-top: 60rpx;
}

/* 底部版权 */
.footer {
  position: fixed;
  bottom: 60rpx;
  width: 100%;
  left: 0;
  text-align: center;
  color: #ccc;
  font-size: 24rpx;
}
