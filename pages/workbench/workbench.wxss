page {
  background: #f7f8fa;
  padding-bottom: 40rpx;
}

.page-bg {
  min-height: 100vh;
  background: #f7f8fa;
}

.list-container {
  padding: 24rpx;
}

/* 工单卡片 */
.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.03);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx dashed #eee;
  margin-bottom: 20rpx;
}

.order-no {
  font-size: 26rpx;
  color: #999;
  font-family: monospace;
}

.card-body .address {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.info-row {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
}

.info-row .icon {
  margin-right: 10rpx;
  color: #1989fa;
}

.card-footer {
  display: flex;
  justify-content: flex-end;
  padding-top: 20rpx;
  border-top: 1rpx solid #f9f9f9;
}

.done-text {
  font-size: 24rpx;
  color: #07c160;
}
