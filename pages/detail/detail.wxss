.detail-page {
  min-height: 100vh;
  background-color: var(--background-color);
  padding-bottom: 24rpx;
}

/* 返工提示条 */
.rework-notice {
  display: flex;
  align-items: flex-start;
  background-color: #fff1f0;
  color: #ee0a24;
  padding: 24rpx;
  margin: 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.rework-notice text {
  margin-left: 12rpx;
  flex: 1;
}

/* 步骤条区域 */
.steps-section {
  margin: 24rpx;
  padding: 32rpx 24rpx;
}

/* 信息区域 */
.info-section {
  margin: 24rpx;
  padding: 24rpx;
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #323233;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #ebedf0;
}

.section-title text {
  margin-left: 12rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 16rpx 0;
}

.info-item .label {
  color: #969799;
  font-size: 28rpx;
  flex-shrink: 0;
  width: 160rpx;
}

.info-item .value {
  color: #323233;
  font-size: 28rpx;
  text-align: right;
  flex: 1;
}

.info-item .phone {
  color: #1989fa;
}

/* 任务列表 */
.task-list {
  padding: 8rpx 0;
}

.task-item {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
  font-size: 28rpx;
  color: #323233;
}

.task-item text {
  margin-left: 12rpx;
}

/* 设备清单 */
.equipment-list {
  padding: 8rpx 0;
}

.equipment-item {
  padding: 16rpx;
  background-color: #f7f8fa;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.equipment-item:last-child {
  margin-bottom: 0;
}

.equipment-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #323233;
  margin-bottom: 8rpx;
}

.equipment-detail {
  font-size: 26rpx;
  color: #969799;
  margin-top: 4rpx;
}

/* 实施汇报表单 */
.report-section {
  margin: 24rpx;
  padding: 24rpx;
}

.upload-section {
  margin-top: 24rpx;
}

.upload-title {
  font-size: 28rpx;
  color: #969799;
  margin-bottom: 16rpx;
}

/* 已完工照片 */
.completed-photos {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.photo-item {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  object-fit: cover;
}

.remark-display {
  margin-top: 24rpx;
  padding: 16rpx;
  background-color: #f7f8fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #323233;
}

.remark-label {
  color: #969799;
}

/* 底部占位 */
.bottom-placeholder {
  height: 140rpx;
}

/* 底部操作栏 */
.action-bar {
  padding: 24rpx 32rpx;
}
