page {
  background: #f7f8fa;
}

.detail-container {
  min-height: 100vh;
  background: #f7f8fa;
}

/* 状态条 */
.status-banner {
  background: #1989fa;
  padding: 40rpx 30rpx;
  color: #fff;
}

.status-banner.is-rework {
  background: #ee0a24;
}

.status-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.status-tip {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 驳回原因 */
.reject-box {
  margin: 24rpx;
  background: #fff;
  padding: 24rpx;
  border-radius: 12rpx;
  border-left: 8rpx solid #ee0a24;
  font-size: 28rpx;
  color: #333;
}

.reject-label {
  color: #ee0a24;
  font-weight: bold;
}

/* 卡片 */
.card {
  background: #fff;
  margin: 24rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.card-title {
  padding: 24rpx;
  font-size: 30rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.card-title::before {
  content: '';
  display: inline-block;
  width: 8rpx;
  height: 30rpx;
  background: #1989fa;
  margin-right: 12rpx;
  border-radius: 4rpx;
}

/* 上传区域 */
.upload-area {
  padding: 24rpx;
}

.upload-label {
  font-size: 28rpx;
  color: #646566;
  margin-bottom: 20rpx;
}

/* 照片列表 */
.photo-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.photo-item {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  object-fit: cover;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  z-index: 99;
}
