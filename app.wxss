/* 全局样式变量 */
page {
  --primary-color: #1989fa;
  --primary-color-dark: #0052D9;
  --background-color: #f7f8fa;
  --card-background: #ffffff;
  --text-color: #323233;
  --text-color-secondary: #969799;
  --border-color: #ebedf0;
  
  /* 状态色 */
  --status-pending: #ff976a;
  --status-accepted: #1989fa;
  --status-implementing: #1989fa;
  --status-completed: #07c160;
  --status-rework: #ee0a24;
  
  /* 圆角和阴影 */
  --card-radius: 12px;
  --card-shadow: 0 2px 12px rgba(100, 101, 102, 0.08);
  
  background-color: var(--background-color);
  font-size: 14px;
  color: var(--text-color);
  line-height: 1.5;
}

/* 通用卡片样式 */
.card {
  background-color: var(--card-background);
  border-radius: var(--card-radius);
  box-shadow: var(--card-shadow);
  margin: 12px;
  padding: 16px;
}

/* 状态标签颜色 */
.status-tag-pending {
  background-color: var(--status-pending) !important;
}

.status-tag-accepted,
.status-tag-implementing {
  background-color: var(--status-accepted) !important;
}

.status-tag-completed {
  background-color: var(--status-completed) !important;
}

.status-tag-rework {
  background-color: var(--status-rework) !important;
}

/* 通用按钮样式 */
.btn-primary {
  background-color: var(--primary-color) !important;
  border-color: var(--primary-color) !important;
}

/* 安全区域适配 */
.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 底部固定操作栏 */
.fixed-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: var(--card-background);
  box-shadow: 0 -2px 12px rgba(100, 101, 102, 0.08);
  padding: 12px 16px;
  padding-bottom: calc(12px + constant(safe-area-inset-bottom));
  padding-bottom: calc(12px + env(safe-area-inset-bottom));
}

/* 文字省略 */
.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* Flex 布局工具类 */
.flex {
  display: flex;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

/* 间距工具类 */
.mt-8 { margin-top: 8px; }
.mt-12 { margin-top: 12px; }
.mt-16 { margin-top: 16px; }
.mb-8 { margin-bottom: 8px; }
.mb-12 { margin-bottom: 12px; }
.mb-16 { margin-bottom: 16px; }
.p-12 { padding: 12px; }
.p-16 { padding: 16px; }
